// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model urls {
  short_url String   @id @unique
  url       String
  created   DateTime @default(now())

  @@index([short_url])
  @@index([url])
}

model views {
  id         Int      @id @default(autoincrement())
  short_url  String
  ip_address String?
  created    DateTime @default(now())

  @@index([short_url])
}
